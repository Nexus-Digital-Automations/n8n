{
	"globalEnv": ["CI", "COVERAGE_ENABLED"],
	"globalDependencies": ["pnpm-lock.yaml", "turbo.json"],
	"globalPassThroughEnv": ["NODE_OPTIONS", "TURBO_CACHE_DIR"],
	"remoteCache": {
		"enabled": true
	},
	"tasks": {
		"clean": { "cache": false },
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false,
			"inputs": ["src/**/*", "*.config.*", "package.json", "tsconfig.json", "rollup.config.*", "vite.config.*"],
			"env": ["NODE_ENV", "NODE_OPTIONS"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck", "^build"],
			"cache": true,
			"inputs": ["src/**/*.{ts,tsx,vue}", "*.config.*", "package.json", "tsconfig.json"],
			"outputs": []
		},
		"format": {},
		"format:check": {},
		"lint": {
			"dependsOn": ["^build", "@n8n/eslint-config#build"],
			"cache": true,
			"inputs": ["src/**/*.{ts,js,vue}", "*.{ts,js}", ".eslintrc*", "eslint.config.*"],
			"outputs": []
		},
		"lint:fast": {
			"dependsOn": ["@n8n/eslint-config#build"],
			"cache": true,
			"inputs": ["src/**/*.{ts,js,vue}", "*.{ts,js}", ".eslintrc*", "eslint.config.*"],
			"outputs": []
		},
		"lint:fix": {},
		"lint:styles": {
			"dependsOn": ["@n8n/stylelint-config#build"]
		},
		"lint:styles:fix": {
			"dependsOn": ["@n8n/stylelint-config#build"]
		},
		"test": {
			"dependsOn": ["^build", "build"],
			"outputs": ["coverage/**", "*.xml"]
		},
		"watch": { "cache": false, "persistent": true },
		"dev": { "cache": false, "persistent": true },
		"build:playwright": {
			"dependsOn": ["install-browsers:ci", "build"]
		},
		"install-browsers:ci": {
			"cache": true,
			"inputs": ["package.json"],
			"outputs": ["ms-playwright-cache/**"],
			"env": ["PLAYWRIGHT_BROWSERS_PATH"]
		},
		"install-browsers:local": {
			"cache": false,
			"inputs": ["package.json"]
		},
		"test:container:standard": {
			"dependsOn": ["install-browsers:local"],
			"env": ["E2E_TESTS"],
			"cache": false
		}
	}
}
